<% @residences.each do |residence| %>
    <tr>
    <td><%=residence.name %> </td>
    <td><%=residence.description %></td>
    <td><%=link_to 'Ver', residence, method: :get, class: 'btn btn-info btn-sm' %></td>
    <td><%=link_to 'Editar',edit_residence_path(residence), class: 'btn btn-info btn-sm' %></td>

    <%- if residence.auctions.size == 0 &&  residence.reserves.size == 0 %>
        <td><%=link_to 'Eliminar', residence, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: '¿Realmente querés eliminar la residencia?'} %></td> 
    <% else %>
        <%- if residence.locked != true %>
	        <td><%=link_to 'Bloquear', logicalDelete_path(id: residence.id), class: 'btn btn-secondary btn-sm', data: { confirm: '¿Realmente querés bloquear la residencia?'} %></td>
        <% else %>
            <td><%=link_to 'Desbloquear', logicalUpdate_path(id: residence.id), class: 'btn btn-light btn-sm', data: { confirm: '¿Realmente querés desbloquear la residencia?'} %></td>
        <% end %> 
    <% end %>
</tr>
<% end %>
