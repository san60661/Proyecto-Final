<h2>Residencias</h2>

<table class="table">
	<thead>
		<tr>
			<th width="80%"> Nombre de la residencia </th>
			<th width="20%"> Descripcion </th>
			<th colspan="2"></th>
		</tr>
	</thead>

<tbody>
	<% @residences.each do |residence| %>
	<tr>
		<td><%=residence.name %> </td>
		<td><%=residence.description %></td>
		<td><%=link_to 'Ver', residence, method: :get, class: 'btn btn-info btn-sm' %></td>
		
		<%= residence.update(user_id: @u.id)%>
		<td><%=link_to 'Adjudicar', usersResidences_path, class: 'btn btn-info btn-sm' %></td> 
	</tr>
	<% end %>
</tbody>
</table>
<%= link_to 'Volver', residencesPremium_path, class: 'btn btn-default' %>
<br>