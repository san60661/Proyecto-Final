<h3> Crear un hot sale </h3>

	<%= form_for @hotsale do |h| %>
	<div class="form-group">
		<%= h.label :residence_id, 'Residencia' %>
		<%= h.collection_select :residence_id, Residence.all, :id, :name, {}, class: 'form-control' %>
	</div>
	
	<div class="form-group">
	<%= h.label :price, 'Valor del hot sale' %>
	<%= h.number_field :price, class: 'form-control', placeholder: 'Ingrese el valor del hotsale', required: true, min: 0 %>
	</div>

	<div class="form-group">
  	<%= h.label :description, 'Descripcion del hot sale' %>
  	<%= h.text_field :description, class: 'form-control', placeholder: 'Ingrese la descripcion del hot sale', required: true %>
  	</div>

  	<div class="form-group">
		<%= h.label :date, 'Fecha de semana en hot sale' %></br>
		<%= week_field("hotsale", "date", min: Date.today, max: Date.today + 180, required: true)%>
	</div>

  	<%= h.submit 'Guardar hot sale', class: 'btn btn-primary' %>
	<%= link_to 'Volver', root_path, class: 'btn btn-secondary btn-sm' %>




<% end %>