<% if  @hotsales.size == 0 %>
    <h3> No hay Hot Sales para mostrar </h3>
    <td><%=link_to 'Volver', root_path, class: 'btn btn-secondary btn-sm' %></td>
<% else %>
<body>
	<table class="table table-striped table-dark">
  	<thead>
        <tr>
            <th scope="col">Nombre de la residencia</th>
            <th scope="col">Precio</th>
            <th scope="col"><span class="oi oi-eye"></span></th>
		</tr>
  	</thead>
  	<tbody>
		<% @hotsales.each do |hotsale| %>
            <tr>
            <td><%= Residence.find(hotsale.residence_id).name %> </td>
            <td><%= hotsale.price %></td>
            <td><%=link_to 'Ver', hotsale, method: :get, class: 'btn btn-info btn-sm' %></td>
            </tr>
        <% end %>
  	</tbody>
	</table>
 	<td><%=link_to 'Volver', root_path, class: 'btn btn-secondary btn-sm' %></td>
</body>
<% end %>
