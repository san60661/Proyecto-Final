<div class="container fluid, p-8 mb-8 bg-standard text-grey".bg-standard>
  
  <h1> Hot sale </h1>
  <h2> <%= @residence.name %> </h2>

</div>
<body>
	<div class="container fluid">
		<div class="row">
			<div class="col-md-13">
				<img src="<%= @residence.image%>" class="img-responsive img-thumbnail" alt="">
			</div>
		</div>
	</div>


	<div class="container">
		<section class="main row">
			<article class="col-md-12 col-sm-8 col-md-9 col-lg-9 mb-2 bg-primary text-white".bg-secondary>
				<h3> <%= @residence.description %> </h3>
			</article>
			<aside class="col-xs-12 col-sm-4 col-md-3 col-lg-3 p-3 mb-2 bg-secondary text-white".bg-secondary>
				<h3> <%= "Precio de oferta" %> </h3>
				<h5> <%= @hotsale.price%> </h5>
			</aside>
		</section>
	</div>

	<div class="p-3 mb-2 bg-secondary text-white".bg-secondary>
		<h3> <%= "Pais: " %> <%= @residence.country %> </h3>
	</div>

	<div class="p-3 mb-2 bg-secondary text-white".bg-secondary>
		<h3> <%= "Provincia: " %> <%= @residence.province %> </h3>
	</div>

	<div class="p-3 mb-2 bg-secondary text-white".bg-secondary>
		<h3> <%= "Localidad: " %> <%= @residence.location %> </h3>
	</div>

	<div class="p-3 mb-2 bg-secondary text-white".bg-secondary>
		<h3> <%= "Direccion: " %> <%= @residence.home %> </h3>
	</div>

</body>
<body style="background-color:#A9CBBC;"> <!-- color de fondo -->
</body>

<%= link_to 'Reservar con hot sale', reserveHotSale_path(id: @hotsale.id), class: 'btn btn-warning',data: { confirm: '¿Realmente querés reservar la residencia?'} %>
<%= link_to 'Volver', root_path, class: 'btn btn-secondary' %>