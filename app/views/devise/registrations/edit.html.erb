<h2>Editar usuario </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "Nueva contraseña" %> <i>(no completar si no desea cambiar la contraseña)</i>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> digitos como minimo)</em>
    <% end %><br>
    <%= f.password_field :password, autocomplete: "Nueva contraseña" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmar nueva contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "Nueva contraseña" %>
  </div>
 
  <div class="field" >
    <%= f.label :birth, "Fecha de nacimiento" %><br />
    <%= f.date_field :birth, autocomplete: "Fecha de nacimiento" %>
  </div>

   <div class="field">
    <%= f.label :card, "Numero de tarjeta" %> 
    <em>(16 digitos)</em><br />
    <%= f.number_field :card, autocomplete: "Numero" %>
   </div>
 
  
  <div class="field">
    <%= f.label :cvv, "Numero de validacion" %>
    <em>(3 digitos)</em><br />
    <%= f.number_field :cvv, autofocus: true, autocomplete: "number"%>
    </input>
  </div>

  <div class="form-group">
    <%= f.label :expiration, "Fecha de vencimiento"%><br/>
    <%= month_field("user", "expiration") %>
  </div>

  <div class="field">
    <%= f.label :current_password, "Contraseña actual" %> <i>(necesitamos tu contraseña actual para confimar los cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "Contraseña actual" %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar" %>
  </div>
<% end %>

<h3>Cancelar mi cuenta</h3>

<p> <%= button_to "Cerrar mi cuenta", registration_path(resource_name), data: { confirm: "Estas seguro?" }, method: :delete %></p>

<%= link_to "Volver", :back %>
